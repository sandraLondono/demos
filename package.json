{
  "name": "cypress_demo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "cypress run --env allure=true",
    "test:chrome": "cypress run --browser chrome --env allure=true",
    "test:smoke": "npx cypress run --env grepTags='@smoke' allure=true",
    "test:regression": "npx cypress run --env grepTags='@regression' allure=true",
    "test:critical": "npx cypress run --env grepTags='@critical' allure=true",
    "test:i": "cypress open",
    "allure:report": "npx allure generate allure-results --clean -o allure-report "
  },
  "private": true,
  "devDependencies": {
    "@cypress/grep": "^4.1.0",
    "@shelex/cypress-allure-plugin": "^2.41.2",
    "cypress": "^14.4.1",
    "cypress-real-events": "^1.14.0"
  }
}
